@{
}

@model Purchase

<h2>Checkout Now</h2>
<p>Please enter your information:</p>

<form method="post">
    <h4>Ship To</h4>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Street Address Line 1</label>
        <input asp-for="AddressLine1" class="form-control" />
        <br />
        <label asp-for="AddressLine2">Street Address Line 2 (Optional)</label>
        <input asp-for="AddressLine2" class="form-control" />
        <br />
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" />
        <br />
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
        <br />
        <label asp-for="Zip">Zip Code</label>
        <input asp-for="Zip" class="form-control" />
        <br />
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Send Purchase" />
    </div>
</form>


